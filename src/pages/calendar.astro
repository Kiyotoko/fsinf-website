---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import CalendarConf from "../components/Calendar";
---

<!doctype html>
<html lang="de">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="container mx-auto p-4">
      <h2>Kalender</h2>

      <CalendarConf client:load />

      <div
        id="popup"
        class="fixed left-1/2 top-1/2 z-10 hidden w-10/12 -translate-x-1/2 -translate-y-1/2 transform rounded-md border border-gray-200 bg-white dark:border-gray-700 dark:bg-gray-800 sm:w-3/5 sm:rounded-lg lg:w-1/3 lg:rounded-xl"
      >
        <div class="flex flex-col gap-1 p-4">
          <div class="flex w-full flex-row justify-between p-2 align-middle">
            <div
              id="popup-title"
              class="text-back text-xl font-semibold dark:text-white"
            >
              Title
            </div>
            <button
              id="popup-close-btn"
              class="h-8 w-8 items-center rounded-full hover:border-gray-300 hover:dark:bg-gray-900"
              aria-label="Close">X</button
            >
          </div>
          <div class="flex flex-row justify-between p-2 pb-4">
            <i id="popup-date">Date</i>
          </div>
          <div class="p-2 pb-4">
            <div id="popup-description">Description</div>
          </div>
        </div>
      </div>
      <script src="../scripts/calendar_popup.js"></script>
    </main>
    <Footer />
  </body>
</html>
